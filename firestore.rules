rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura dos quadrados para todos
    match /squares/{squareId} {
      allow read: if true;  // Qualquer pessoa pode ler os quadrados
      allow write: if request.auth != null;  // Apenas usuários autenticados podem escrever
    }
    
    // Permitir leitura das configurações para todos
    match /settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Regra padrão: negar tudo que não foi explicitamente permitido
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 